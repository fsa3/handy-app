<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/purple_500"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/ad_framelayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/adcard_imageview"
                android:layout_width="182dp"
                android:layout_height="109dp"
                android:contentDescription="@string/advertisement_image"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/adcard_trade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/purple_overlay"
                android:paddingHorizontal="3dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:textColor="@color/white"
                tools:text="trade" />
        </FrameLayout>

        <TextView
            android:id="@+id/adcard_title"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:gravity="center"
            android:padding="3dp"
            android:textAlignment="center"
            android:textStyle="bold"
            tools:text="ad title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:paddingHorizontal="6dp">

            <TextView
                android:id="@+id/adcard_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:textSize="12sp"
                tools:text="ReykjavÃ­k" />

            <TextView
                android:id="@+id/adcard_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:textAlignment="textEnd"
                android:textSize="12sp"
                tools:text="25.11.2022" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>