<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/createPortfolioItem_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CreatePortfolioItemActivity">

    <TextView
        android:id="@+id/createPortItem_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/post_a_portfolio_item"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/createPortfolioItem_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:layout_marginBottom="3dp"
        android:ems="10"
        android:hint="@string/portfolio_item_title"
        android:importantForAutofill="no"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/createPortfolioItem_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/createPortfolioItem_description"
        android:layout_width="298dp"
        android:layout_height="76dp"
        android:layout_marginTop="220dp"
        android:layout_marginBottom="25dp"
        android:ems="10"
        android:gravity="start"
        android:hint="@string/description"
        android:importantForAutofill="no"
        android:inputType="text|textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/createPortfolioItem_post"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/createPortfolioItem_location"
        android:layout_width="210dp"
        android:layout_height="46dp"
        android:layout_marginTop="164dp"
        android:ems="10"
        android:hint="@string/location"
        android:importantForAutofill="no"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/createPortfolioItem_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="290dp"
        android:layout_height="29dp"
        android:layout_marginStart="189dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="8dp"
        android:text="@string/add_an_image_to_your_portfolio"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/createPortfolioItem_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/createPortfolioItem_title"
        app:layout_constraintTop_toBottomOf="@+id/createPortItem_header" />

    <Button
        android:id="@+id/createPortfolioItem_post"
        android:layout_width="169dp"
        android:layout_height="57dp"
        android:layout_marginStart="281dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="281dp"
        android:layout_marginBottom="27dp"
        android:text="@string/post"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createPortfolioItem_description" />

    <ImageView
        android:id="@+id/createPortfolioItem_image"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="142dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="115dp"
        android:background="@drawable/ic_baseline_add_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/createPortfolioItem_description"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>